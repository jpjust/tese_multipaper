@article{Arena_2022,
  author    = {Fabio Arena and Giovanni Pau and Anca Ralescu and Alessandro Severino and Ilsun You},
  title     = {An Innovative Framework for Dynamic Traffic Lights Management Based on the Combined Use of Fuzzy Logic and Several Network Architectures},
  journal   = {Journal of Advanced Transportation},
  year      = {2022},
  volume    = {2022},
  pages     = {1--17},
  month     = {feb},
  doi       = {10.1155/2022/1383349},
  editor    = {Socrates Basbas},
  publisher = {Hindawi Limited},
  review    = {In this paper the authors propose a black-box approach for smart traffic lights management. In their approach, a black-box system receives input data from the vehicles on the intersecting roads to handle traffic lights. Depending on the traffic on each road and lane, the system can switch lights in order to improve traffic and reduce waiting times. The authors simulated a 24 hour traffic with three scenarios: fixed time traffic lights, fully controlled with IEEE 802.11p communications and fully controlled with LTE-V2V communications. As expected, fixed time traffic lights had the worst performance, exceeding 400 seconds of waiting time in some cases. By using IEEE 802.11p, the simulations presented a worst case scenario of 185.75 seconds with an average of 48.82 seconds of waiting time. At last, by using LTE-V2V for communications, the simulation presented a worst case scenario of 185.75 seconds, the same as IEEE 802.11p, but an average of 53.81 seconds, showing that the IEEE 802.11p approach gives the best results. Although these results favor IEEE 802.11p, the average difference is of only 5 seconds. The authors argue that the choice of LTE-V2V communications technology may be more viable because of the spread of 5G technologies, thus, it can make use of existing infrastructure.}
}

@article{Hung_2016,
  author    = {Hung-Chih Hung and Ching-Yi Yang and Chang-Yi Chien and Yi-Chung Liu},
  title     = {Building resilience: Mainstreaming community participation into integrated assessment of resilience to climatic hazards in metropolitan land use management},
  journal   = {Land Use Policy},
  year      = {2016},
  volume    = {50},
  pages     = {48--58},
  month     = {jan},
  doi       = {10.1016/j.landusepol.2015.08.029},
  keywords  = {rank5},
  publisher = {Elsevier {BV}},
  review    = {In this paper the authors propose a resilience index called Climatic Hazard Resilience Indicators for Localities (CHRIL). They used four main indicators categories: inherent biophysical conditions, inherent socioeconomic conditions, institutional and infrastructural capacity, and adaptive capacity and learning. To assess their proposal, a total of 10 experts and officers participated in a questionnaire survey to indicate an importance level of each indicator in all categories. The main idea of the authors is to mainstream the community participation in the process so the resulting planning that can have the stakeholders experience and opinions. In the validation process, the authors applied their index in Taichung City, Taiwan. They obtained a resilience map of the city in every indicator category as also a composite index containing an average of all categories. Lastly, they define three clusters of areas in the city, each cluster having a predominant index value (low, medium and high resilience).
               
               Alguns fatos interessantes:
               
               1) Os autores segmentaram as regiões pelos bairros, uma ideia que eu também estava imaginando.
               2) Os indicadores de risco são relacionados a chuvas e tufões. Para outros tipos de ameaças esses índices provavelmente não seriam válidos, o que reforça minha ideia de que é preciso definir as ameaças primeiro.}
}

