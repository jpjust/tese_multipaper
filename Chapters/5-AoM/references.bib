@article{Fernandez_2015,
  author    = {Paulo Fernandez and Sandra Mourato and Madalena Moreira},
  title     = {Social vulnerability assessment of flood risk using {GIS}-based multicriteria decision analysis. A case study of Vila Nova de Gaia (Portugal)},
  journal   = {Geomatics, Natural Hazards and Risk},
  year      = {2015},
  volume    = {7},
  number    = {4},
  pages     = {1367--1389},
  month     = {jun},
  doi       = {10.1080/19475705.2015.1052021},
  keywords  = {rank5},
  publisher = {Informa {UK} Limited},
  review    = {In this paper the authores propose a GIS-MCDA based approach for asessing vulnerability to flooding in parishes in Vila Nova de Gaia, Portugal. The authors used a three-level hierarchical social vulnerability model. In the first level, they considered four objectives: population, buildings, socio-economics and exposed elements. For each objective, up to two levels of attributes that influence the vulnerability in the region were given. For example, in population objective (first level), the age attribute (second level) can be separeted in three groups (third level): under 14, upper 64 and between 14 and 64. Each group can have a different impact in the vulnerability of the region. Also, for each attribute, a panel of specialists assigned a criteria weight to be used in aggregation methods to calculate the vulnerability of each perish. The authors applied their approach in Vila Nova de Gaia and the results were consistent with the empirical knowledge of the regions.}
}

@article{Hondula_2015,
  author    = {David M. Hondula and Robert E. Davis and Michael V. Saha and Carleigh R. Wegner and Lindsay M. Veazey},
  title     = {Geographic dimensions of heat-related mortality in seven U.S. cities},
  journal   = {Environmental Research},
  year      = {2015},
  volume    = {138},
  pages     = {439--452},
  month     = {apr},
  doi       = {10.1016/j.envres.2015.02.033},
  keywords  = {rank3},
  publisher = {Elsevier {BV}},
  review    = {In this paper the authors collect historical information of heat-related mortailty in six cities in the United States. The authors make a correlation of some demographic and environmental variables that influence the risk of dying at hot days in summer.
               
               Este artigo mostra que parâmetros demográficos também afetam as taxas de mortalidade por calor em dias quentes. Ele servirá como referência quando afirmarmos que dados históricos também têm valor na hora de definir o risco de uma zona. Neste caso, eles usam dados históricos pra definirem as probabilidades de mortalidade por calor, além de definir um limiar de temperatura o qual, a partir daí, supõe-se que a temperatura está muito arriscada.
               
               Se considerarmos o histórico de uma região quanto a uma ameaça específica, podemos dizer que essa região tem um risco elevado.}
}



