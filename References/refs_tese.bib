@Article{Wang2018545,
  author        = {Wang, X. and Choi, T.-M. and Liu, H. and Yue, X.},
  title         = {A novel hybrid ant colony optimization algorithm for emergency transportation problems during post-disaster scenarios},
  journal       = {IEEE Transactions on Systems, Man, and Cybernetics: Systems},
